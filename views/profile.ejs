<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<body class="main">
    <style>
        .main{
            display : flex;
            flex-direction : column;
            justify-content: center;
            align-items: center;
        }

        .heading{
            font-family: Arial, Helvetica, sans-serif;
        }

        .product{
            height : 150px;
            width : 400px;
            background-color: rgb(255, 237, 231);
            margin-top : 20px;
            display : flex;
            flex-direction : row;
        }

        .product-1{
            height : 150px;
            width : 150px;
            background-color: lightgrey;
        }

        .product-2{
            height : 150px;
            width : 200px;
            background-color: rgb(214, 237, 251);
        }

        .p-21{
            height : 120px;
            width : 250px;
            background-color: rgb(247, 211, 211);
        }

        .p-22{
            height : 30px;
            width : 250px;
            background-color: rgb(237, 204, 237);
            font-family: Arial, Helvetica, sans-serif;
            display : flex;
            align-items: center;
        }

        .product-name{
            font-family: Arial, Helvetica, sans-serif;
            display : flex;
            flex-direction : row;
            margin-left : 10px;
            font-weight : bold;
        }

        .product-desc{
            font-family: Arial, Helvetica, sans-serif;
            margin-left : 10px;
            color : gray;
            font-size : small;
        }

        .fuck{
            margin-left : 10px;
        }

    </style>
    <h1 class="heading">Profile</h1>

    <% if (user.products && user.products.length > 0) { %>
        <% user.products.forEach((product, index) => { %>
            <div class="product">
                <div class="product-1">
                    <img src="/Users/shivansh/Desktop/S-Commerce/kitty.jpeg" alt="">
                </div>
                <div class="product-2">
                    <div class="p-21">
                        <div class="product-name">
                            <p><%= product.name %></p>
                        </div>
                        <div class="product-desc">
                            <p>â€¢ <%= product.description %></p>
                        </div>
                    </div>
                    <div class="p-22">
                        <p class="fuck">$<%= product.price %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No profile data found</p>
    <% } %>


    <style>
            .twitter-personalprofile{
                width : 55px;
                height : 55px;
                border-radius : 50px;
                object-fit: cover;
                margin-top : 10px;
                margin-bottom: 10px;
            }
            .name{
                font-family: Arial, Helvetica, sans-serif;
                font-size: 15px;
                font-weight: bold;
            }
            .username{
                margin-left : 10px;
                font-family : Arial, Helvetica, sans-serif;
                font-size : 13px;
                color : rgb(96 , 96 , 96 );
            }
            .twitter-options{
                margin-bottom: 0px;
                margin-left : 100px;
                display: inline-block;
            }
            .tweet{
                font-family : Arial, Helvetica, sans-serif;
                font-size: 13px;
                margin-top : 0px;
                margin-bottom: 0px;
            }
            .profile-info{
                margin-top : 0px;
                margin-bottom: 6px;
            }
            .tweet-popinion{
                font-size : 10px;
                font-family : Arial, Helvetica, sans-serif;
            }
            .comments , .retweet , .tweet-like{
                margin-left : 50px;
            }
            .twitter-profile{
                display: inline-block;
                margin-left : 10px;
            }
            .twitter-desc{
                display : inline-block;
                margin-left : 10px;
            }
            .comments , .retweet , .tweet-like{
                transition : color 0.4s;
            }
            .comments:hover{
                color : rgb(11, 204, 11);
            }
            .retweet:hover{
                color : rgb(208, 5, 5);
            }
            .tweet-like:hover{
                color : rgb(78, 150, 244);
            }
            .twitter{
                background-color: rgb(19, 19, 19);
                color : white;
                width : 410px;
                margin-top : 50px;
                margin-bottom : 50px;
            }
    </style>

    <% user.posts.forEach((post, index) => { %>

        <div class="twitter">
            <div class="twitter-profile">
                <img class="twitter-personalprofile"src="cat.jpeg" alt="cat">
            </div>
            <div class="twitter-desc">
                <p class="profile-info"><span class="name"><%=post.name%></span><span class="username">@elonmusk . 5 Jun</span><span class="twitter-options">&hellip;</span></p>
                <p class="tweet">Some hate humanity, but I love humanity so much</p>
                <p class="tweet-popinion"><span class="comments">100k</span><span class="retweet">100k</span><span class="tweet-like">100k</span></p>
            </div>
        </div>

    <% }) %>
</body>
</html>
