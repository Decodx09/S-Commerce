    <script>
        function submitForm() {
            var searchQuery = document.getElementById("searchInput").value;
            fetch("http://localhost:5554/product?search=" + encodeURIComponent(searchQuery))
                .then(response => response.json())
                .then(data => {
                    var htmlContent = "<ul>";
                    data.forEach(product => {
                        htmlContent += 
                        `
                        <div class="product">
                            <div class="product-1">
                                <img src="/Users/shivansh/Desktop/S-Commerce/kitty.jpeg" alt="">
                                <button class="wishlist"><img src="./heart.jpeg" alt=""></button>
                            </div>
                            <div class="product-2">
                                <div class="p-21">
                                    <div class="product-name">
                                        <p style="margin-top : 5px;">${product.name}</p>
                                    </div>
                                    <div class="product-desc">
                                        <p>• ${product.description}</p>
                                    </div>
                                </div>
                                <div class="p-22">
                                    <button class="fuck">$${product.price}</button>
                                    <button class="fuck2">Add to cart</button>
                                </div>
                            </div>
                        </div>
                        `;
                    });
                    htmlContent += "</ul>";
                    document.getElementById("searchResults").innerHTML = htmlContent;
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
